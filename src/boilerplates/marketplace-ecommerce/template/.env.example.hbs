# {{projectName}} - Environment Variables

# API Configuration
VITE_API_URL={{apiUrl}}
VITE_API_TIMEOUT=30000

# Database
DATABASE_URL={{database}}://user:password@localhost:5432/{{projectName}}_db

{{#if useRedis}}
# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
{{/if}}

{{#if useElasticsearch}}
# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
{{/if}}

# Marketplace Configuration
VITE_MARKETPLACE_NAME={{branding.appName}}
VITE_MARKETPLACE_TAGLINE={{branding.tagline}}
VITE_CURRENCY={{defaultCurrency}}
VITE_LOCALE={{languages.[0]}}
VITE_BUSINESS_MODEL={{businessModel}}

# Business Rules
VITE_COMMISSION_RATE={{customization.ecommerce.commissionRate}}
VITE_FREE_SHIPPING_THRESHOLD={{customization.ecommerce.shippingFree}}
VITE_TAX_RATE={{customization.ecommerce.taxRate}}
VITE_ITEMS_PER_PAGE={{customization.ecommerce.itemsPerPage}}

# File Upload
VITE_MAX_FILE_SIZE={{customization.ecommerce.maxImageSize}}
VITE_ALLOWED_FILE_TYPES={{join customization.ecommerce.allowedImageTypes ","}}
VITE_UPLOAD_ENDPOINT=/api/upload

{{#if features.payment-integration}}
# Payment Gateways
{{#if paymentGateways.stripe}}
VITE_STRIPE_PUBLIC_KEY=pk_test_51234567890abcdef...
STRIPE_SECRET_KEY=sk_test_51234567890abcdef...
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...
{{/if}}

{{#if paymentGateways.pagseguro}}
PAGSEGURO_EMAIL=vendedor@exemplo.com
PAGSEGURO_TOKEN=12345678-1234-1234-1234-123456789012
PAGSEGURO_SANDBOX=true
PAGSEGURO_NOTIFICATION_URL={{apiUrl}}/webhooks/pagseguro
{{/if}}

{{#if paymentGateways.paypal}}
VITE_PAYPAL_CLIENT_ID=AW1234567890abcdef...
PAYPAL_CLIENT_SECRET=EL1234567890abcdef...
PAYPAL_SANDBOX=true
{{/if}}

{{#if paymentGateways.mercadopago}}
VITE_MERCADOPAGO_PUBLIC_KEY=TEST-12345678-1234-1234-1234-123456789012
MERCADOPAGO_ACCESS_TOKEN=TEST-1234567890123456-123456-12345678901234567890123456789012-123456789
MERCADOPAGO_SANDBOX=true
{{/if}}

{{#if paymentGateways.pix}}
PIX_KEY=12345678000100
PIX_BANK_CODE=123
PIX_AGENCY=1234
PIX_ACCOUNT=12345678
{{/if}}
{{/if}}

{{#if shippingIntegration}}
# Shipping Integrations
{{#if shippingIntegration.correios}}
CORREIOS_CONTRACT=1234567890
CORREIOS_PASSWORD=123456
CORREIOS_SERVICES=SEDEX,PAC,SEDEX_10
{{/if}}

{{#if shippingIntegration.fedex}}
FEDEX_API_KEY=your-fedex-api-key
FEDEX_SECRET_KEY=your-fedex-secret-key
FEDEX_ACCOUNT_NUMBER=123456789
{{/if}}

{{#if shippingIntegration.dhl}}
DHL_API_KEY=your-dhl-api-key
DHL_SECRET=your-dhl-secret
DHL_ACCOUNT_NUMBER=123456789
{{/if}}
{{/if}}

# Analytics & Tracking
{{#if integrations.analytics.googleAnalytics.enabled}}
VITE_GA_TRACKING_ID={{integrations.analytics.googleAnalytics.trackingId}}
{{/if}}

{{#if integrations.analytics.facebookPixel.enabled}}
VITE_FACEBOOK_PIXEL_ID={{integrations.analytics.facebookPixel.pixelId}}
{{/if}}

VITE_HOTJAR_ID=
VITE_CRISP_WEBSITE_ID=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@{{projectName}}.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME={{branding.appName}}
EMAIL_FROM_ADDRESS=noreply@{{projectName}}.com

# Notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@{{projectName}}.com

# Social Login (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS & Security Headers
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_DIRECTIVES=default-src 'self'

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Development Only
NODE_ENV=development
VITE_DEBUG=true
VITE_MOCK_API=false

# Testing
TEST_DATABASE_URL={{database}}://user:password@localhost:5432/{{projectName}}_test
PLAYWRIGHT_HEADLESS=true

{{#if useDocker}}
# Docker Configuration
COMPOSE_PROJECT_NAME={{projectName}}
POSTGRES_DB={{projectName}}_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
{{#if useRedis}}
REDIS_PORT=6379
{{/if}}
{{#if useElasticsearch}}
ELASTICSEARCH_PORT=9200
{{/if}}
{{/if}}