import { useState } from 'react'
import { Outlet } from 'react-router-dom'
import { ArchbaseSidebar, ArchbaseHeader } from 'archbase-react'
import { 
  DashboardIcon, 
  UsersIcon, 
  ReportsIcon, 
  SettingsIcon,
  MenuIcon,
  BellIcon,
  UserCircleIcon
} from '../components/icons'
{{#if (includes features "authentication")}}
import { useAuth } from '../hooks/useAuth'
{{/if}}
{{#if (includes features "notifications")}}
import { NotificationCenter } from '../components/notifications/NotificationCenter'
{{/if}}

export function DashboardLayout() {
  const [sidebarOpen, setSidebarOpen] = useState(true)
  const [showNotifications, setShowNotifications] = useState(false)
  {{#if (includes features "authentication")}}
  const { user, logout } = useAuth()
  {{/if}}

  const sidebarItems = [
    {
      label: 'Dashboard',
      path: '/dashboard',
      icon: <DashboardIcon />,
    },
    {{#if (includes features "user-management")}}
    {
      label: 'Usuários',
      path: '/users',
      icon: <UsersIcon />,
    },
    {{/if}}
    {{#if (includes features "reports")}}
    {
      label: 'Relatórios',
      path: '/reports',
      icon: <ReportsIcon />,
    },
    {{/if}}
    {{#if (includes features "settings")}}
    {
      label: 'Configurações',
      path: '/settings',
      icon: <SettingsIcon />,
    },
    {{/if}}
  ]

  const headerActions = [
    {{#if (includes features "notifications")}}
    {
      icon: <BellIcon />,
      onClick: () => setShowNotifications(!showNotifications),
      badge: 3,
    },
    {{/if}}
    {
      icon: <UserCircleIcon />,
      dropdown: [
        {{#if (includes features "authentication")}}
        { label: 'Perfil', onClick: () => {} },
        { label: 'Sair', onClick: logout },
        {{else}}
        { label: 'Perfil', onClick: () => {} },
        {{/if}}
      ],
    },
  ]

  return (
    <div className="flex h-screen bg-gray-50 dark:bg-gray-900">
      <ArchbaseSidebar
        items={sidebarItems}
        open={sidebarOpen}
        onToggle={() => setSidebarOpen(!sidebarOpen)}
        title="{{branding.appName}}"
        logo="/logo.svg"
      />

      <div className="flex-1 flex flex-col overflow-hidden">
        <ArchbaseHeader
          title=""
          leftContent={
            <button
              onClick={() => setSidebarOpen(!sidebarOpen)}
              className="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
            >
              <MenuIcon />
            </button>
          }
          rightContent={
            <div className="flex items-center gap-4">
              {{#if (includes features "authentication")}}
              <span className="text-sm text-gray-600 dark:text-gray-400">
                Olá, {user?.name || 'Usuário'}
              </span>
              {{/if}}
              <div className="flex items-center gap-2">
                {headerActions.map((action, index) => (
                  <button
                    key={index}
                    onClick={action.onClick}
                    className="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 relative"
                  >
                    {action.icon}
                    {action.badge && (
                      <span className="absolute top-0 right-0 -mt-1 -mr-1 px-2 py-1 text-xs bg-red-500 text-white rounded-full">
                        {action.badge}
                      </span>
                    )}
                  </button>
                ))}
              </div>
            </div>
          }
        />

        <main className="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 dark:bg-gray-900">
          <div className="container mx-auto px-6 py-8">
            <Outlet />
          </div>
        </main>
      </div>

      {{#if (includes features "notifications")}}
      <NotificationCenter
        open={showNotifications}
        onClose={() => setShowNotifications(false)}
      />
      {{/if}}
    </div>
  )
}