/* {{componentName}} Login Styles */

.wrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, 
    light-dark(var(--mantine-color-blue-0), var(--mantine-color-dark-8)) 0%,
    light-dark(var(--mantine-color-indigo-1), var(--mantine-color-dark-9)) 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  padding: rem(20px);
}

.container {
  width: 100%;
  max-width: rem(1200px);
  margin: 0 auto;
}

/* Branding Section */
.brandingSection {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, 
    light-dark(var(--mantine-color-blue-6), var(--mantine-color-blue-8)) 0%,
    light-dark(var(--mantine-color-indigo-7), var(--mantine-color-indigo-9)) 100%
  );
  border-radius: rem(12px);
  padding: rem(60px) rem(40px);
  color: white;
  min-height: rem(600px);
}

.brandingContent {
  text-align: center;
  max-width: rem(400px);
}

.logo {
  width: rem(120px);
  height: rem(120px);
  margin: 0 auto rem(30px);
  filter: brightness(0) invert(1);
}

.brandTitle {
  font-size: rem(48px);
  font-weight: 700;
  margin-bottom: rem(16px);
  background: linear-gradient(45deg, white, rgba(255, 255, 255, 0.8));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.brandSubtitle {
  font-size: rem(18px);
  opacity: 0.9;
  font-weight: 300;
}

/* Login Section */
.loginSection {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: rem(40px) rem(20px);
}

.loginCard {
  width: 100%;
  max-width: rem(400px);
  background: light-dark(white, var(--mantine-color-dark-7));
  border: rem(1px) solid light-dark(var(--mantine-color-gray-2), var(--mantine-color-dark-6));
}

.loginHeader {
  margin-bottom: rem(24px);
}

.loginTitle {
  color: light-dark(var(--mantine-color-gray-9), var(--mantine-color-gray-1));
  font-weight: 600;
}

.loginButton {
  background: linear-gradient(135deg, 
    var(--mantine-color-blue-6) 0%,
    var(--mantine-color-indigo-6) 100%
  );
  border: none;
  font-weight: 600;
  transition: all 0.2s ease;
}

.loginButton:hover {
  transform: translateY(rem(-1px));
  box-shadow: 0 rem(8px) rem(25px) rgba(0, 0, 0, 0.15);
}

.forgotPassword {
  color: var(--mantine-color-blue-6);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

.forgotPassword:hover {
  color: var(--mantine-color-blue-7);
  text-decoration: underline;
}

/* Mobile Styles */
.mobileWrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, 
    light-dark(var(--mantine-color-blue-0), var(--mantine-color-dark-8)) 0%,
    light-dark(var(--mantine-color-indigo-1), var(--mantine-color-dark-9)) 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  padding: rem(20px);
}

.mobileContainer {
  width: 100%;
  max-width: rem(400px);
}

.mobileBranding {
  text-align: center;
  margin-bottom: rem(40px);
}

.mobileLogo {
  width: rem(80px);
  height: rem(80px);
  margin: 0 auto rem(20px);
}

.mobileBrandTitle {
  font-size: rem(28px);
  font-weight: 700;
  margin-bottom: rem(8px);
  color: light-dark(var(--mantine-color-gray-9), var(--mantine-color-gray-1));
}

.mobileBrandSubtitle {
  font-size: rem(14px);
}

.mobileLoginCard {
  background: light-dark(white, var(--mantine-color-dark-7));
  border: rem(1px) solid light-dark(var(--mantine-color-gray-2), var(--mantine-color-dark-6));
}

.mobileLoginHeader {
  margin-bottom: rem(20px);
}

.mobileLoginTitle {
  color: light-dark(var(--mantine-color-gray-9), var(--mantine-color-gray-1));
  font-weight: 600;
}

.mobileLoginButton {
  background: linear-gradient(135deg, 
    var(--mantine-color-blue-6) 0%,
    var(--mantine-color-indigo-6) 100%
  );
  border: none;
  font-weight: 600;
  height: rem(48px);
}

.mobileForgotPassword {
  color: var(--mantine-color-blue-6);
  text-decoration: none;
  font-weight: 500;
}

.mobileForgotPassword:hover {
  color: var(--mantine-color-blue-7);
  text-decoration: underline;
}

/* Responsive Breakpoints */
@media (max-width: 768px) {
  .brandingSection {
    display: none;
  }
  
  .container {
    padding: 0;
  }
  
  .loginSection {
    padding: rem(20px);
  }
}

@media (max-width: 480px) {
  .wrapper {
    padding: rem(10px);
  }
  
  .loginCard {
    padding: rem(20px);
  }
  
  .brandTitle {
    font-size: rem(36px);
  }
}